<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ReceiveSMS</servlet-name>
        <servlet-class>SMSAPI.ReceiveSMS</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Database.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getServiceAreas</servlet-name>
        <servlet-class>API.getServiceAreas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Database.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>get_service_area_data</servlet-name>
        <servlet-class>API.get_service_area_data</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>load_daily_summary</servlet-name>
        <servlet-class>API.load_daily_summary</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceiveSMS</servlet-name>
        <url-pattern>/ReceiveSMS</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getServiceAreas</servlet-name>
        <url-pattern>/getServiceAreas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>get_service_area_data</servlet-name>
        <url-pattern>/get_service_area_data</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>load_daily_summary</servlet-name>
        <url-pattern>/load_daily_summary</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            -1
        </session-timeout>
    </session-config>
</web-app>
